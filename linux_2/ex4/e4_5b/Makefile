CC = gcc
LDFLAGS+= -lpthread
all: clean read

read: main.o read.o  
	$(CC) main.o read.o -lpthread
	$(CC) $^ $(LDFLAGS) -o $@
clean :
	@echo "\033[0;31m"
	@echo "========================================================="
	@echo "                 Cleaning Started                    "
	@echo "========================================================="
	@echo "\033[0m"
	rm  -rf *.o *~
	@echo "\033[0;31m"
	@echo "========================================================="
	@echo "                 Cleaning Finished                       "
	@echo "========================================================="
	@echo "\033[0m"

