CC = gcc
LDFLAGS+= -lpthread
all: clean out

out: main.o sem2.o  
	$(CC) main.o sem2.o -lpthread
	$(CC) $^ $(LDFLAGS) -o $@
clean :
	@echo "\033[0;31m"
	@echo "========================================================="
	@echo "                 Cleaning Started                    "
	@echo "========================================================="
	@echo "\033[0m"
	rm  -rf *.o *~
	@echo "\033[0;31m"
	@echo "========================================================="
	@echo "                 Cleaning Finished                       "
	@echo "========================================================="
	@echo "\033[0m"
														
