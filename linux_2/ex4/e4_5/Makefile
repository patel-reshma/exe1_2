################################################################### 
CC = gcc
LDFLAGS+= -lpthread

all: clean product

product: main.o product.o  
	$(CC) main.o product.o -lpthread
	$(CC) $^ $(LDFLAGS) -o $@
clean :
	@echo "\033[0;31m"
	@echo "========================================================="
	@echo "                 Cleaning Started                    "
	@echo "========================================================="
	@echo "\033[0m"
	
	rm  -rf *.o *~
	
	@echo "\033[0;31m"
	@echo "========================================================="
	@echo "                 Cleaning Finished                       "
	@echo "========================================================="
	@echo "\033[0m"


